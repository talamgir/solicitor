<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<div></div>
<br />
<br />
<br />
<span><%= link_to "New Project", new_project_path, class: "btn btn-primary" %></span>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><span>Download Link</span></th>
      <th><span>Delete</span></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        
        <td><span><%= link_to p.name, p.attachment_url %></span></td>
        <td><span><%= button_to "Delete", method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete this?" %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
