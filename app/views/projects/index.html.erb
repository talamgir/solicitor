<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        
        <td><%= link_to p.name, p.attachment_url %></td>
        <td><%= button_to "Delete", method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete this?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
